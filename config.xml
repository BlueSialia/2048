<?xml version="1.0" encoding="UTF-8"?>
<widget id="io.cocoon.sample.game2048" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cocoon="http://cocoon.io/ns/1.0">
    <name>2048</name>
    <description>
2048 game with Cocoon.io using https://github.com/gabrielecirulli/2048 as base.
    </description>

    <!-- Shown in the wizard -->
    <icon src="icon.png" />

    <content src="index.html" />
    <access origin="*"/>
    
    <preference name="Orientation" value="portrait"/>
    <preference name="Fullscreen" value="true"/>

    <cocoon:plugin name="com.ludei.webviewplus.ios"/>
    <cocoon:plugin name="com.ludei.webviewplus.android"/>

    <plugin name="cordova-plugin-whitelist" version="1"/>

    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>

    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>